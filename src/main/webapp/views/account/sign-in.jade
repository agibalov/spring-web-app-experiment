extends ../layout

block title
  | Sign In

block content
  h1 Sign In
  form(method="POST", action="/account/sign-in")
    .form-group(class=userNameError ? "has-error" : "")
      label.control-label(for="userName") User Name
      input.form-control(type="text", name="userName", value="#{signInModel.userName}")
      if userNameError
        span.help-block #{userNameError}
    .form-group(class=passwordError ? "has-error" : "")
      label.control-label(for="password") Password
      input.form-control(type="password", name="password", value="#{signInModel.password}")
      if passwordError
        span.help-block #{passwordError}
    button.btn.btn-primary.btn-lg(type="submit") Sign In
