extends ../layout

block title
  | #{category.Category.Name}

block content
  h2 #{category.Category.Name}
  ul.list-unstyled
    for article in category.Articles
      li
        h3: a(href="/article/#{article.Article.Id}") #{article.Article.Title}
        +article_meta(article)
        div!= markdownHelper.renderMarkdown(article.Article.Text)
  
