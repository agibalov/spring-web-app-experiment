extends ../layout
 
block title
  | New Article

block content  
  form(method="POST", action="/article/new")
    .form-group(class=userNameError ? "has-error" : "")
      label.control-label(for="title") Title
      input.form-control(type="text", name="title", value="todo")
      if titleError
        span.help-block #{titleError}
    .form-group(class=text ? "has-error" : "")
      label.control-label(for="text") Text
      textarea.form-control(name="text") todo
      span.help-block You can use <a href="http://en.wikipedia.org/wiki/Markdown" target="_blank">markdown</a>.
      if textError
        span.help-block #{textError}
    button.btn.btn-primary.btn-lg(type="submit") Post
